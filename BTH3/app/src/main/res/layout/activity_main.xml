<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B19DCAT111"
            android:textColor="#03A9F4"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Quản lí sách"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edit_text"
                android:ems="10"
                android:layout_weight="1"
                android:hint="Nhập tên sách..."
                android:inputType="textPersonName"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/searchTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="8dp"
                android:text="Tìm"
                android:textColor="#000000"
                app:strokeColor="#2D799B"
                app:strokeWidth="1dp"
                app:backgroundTint="#19A7CE"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn khoảng giá:"
            android:layout_marginTop="16dp"
            android:textColor="@color/purple_700">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/priceLow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:hint="0"
                android:background="@drawable/custom_edit_text"
                android:inputType="number"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black"
                android:textSize="14sp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="24dp" />

            <EditText
                android:id="@+id/priceHigh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:hint="0"
                android:background="@drawable/custom_edit_text"
                android:inputType="number"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/searchPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_marginLeft="16dp"
                android:text="Tìm"
                android:textColor="#000000"
                app:strokeColor="#2D799B"
                app:strokeWidth="1dp"
                app:backgroundTint="#19A7CE"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/addNewBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_weight="1"
                android:text="Thêm sách"
                android:layout_marginRight="8dp"
                android:textColor="#000000"
                app:strokeColor="#2D799B"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#FFFFFF"
                android:text="Sắp xếp"
                android:textColor="#000000"
                app:strokeColor="#2D799B"
                app:strokeWidth="1dp" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>